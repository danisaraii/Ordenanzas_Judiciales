<!DOCTYPE html>
<html lang="es-ec">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrdenanzasJudiciales</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Otros CSS -->
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f2f2f2;
        }

        main {
            flex: 1;
        }

        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body onload="nobackbutton();">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <img src="/images/tcslogo.png" asp-append-version="true" height="40" style="float:left">
            &nbsp;&nbsp;&nbsp;&nbsp;
            <div class="container">
                <!-- Contenido del navbar -->

                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:white; ">Ordenanzas Judiciales</a> *@
                <a class="navbar-brand" asp-area="" asp-area="" asp-controller="ProcesosOrdenanzas" asp-action="Index" style="color:white; ">Ordenanzas Judiciales</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="color:white">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="color:white">
                            <a class="nav-link text-light" asp-area="" asp-controller="ProcesosOrdenanzas" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="ConsultaInformacion" asp-action="Index">Consulta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Administracion" asp-action="Index">Administracion</a>
                        </li>
                    </ul>
                    @* <partial name="_LoginPartial" /> *@
                </div>

            </div>
        </nav>
    </header>

    <main class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2025 - Ordenanzas Judiciales - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
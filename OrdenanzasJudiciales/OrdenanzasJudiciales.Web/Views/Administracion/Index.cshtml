@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="image/svg" href="~/images/" />
<link rel="stylesheet" type="text/css" href="~/css/administracion.css" />
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
        <!-- Card 1 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-gavel fa-2x text-primary"></i>
                    </div>
                    <h5 class="card-title">Juzgados</h5>
                    <p class="card-text">Gestiona juzgados y sus detalles.</p>
                    <a href="/Juzgados/Index" class="btn btn-outline-primary btn-sm">Administrar</a>
                </div>
            </div>
        </div>

@*         <!-- Card 2 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-user-tie fa-2x text-success"></i>
                    </div>
                    <h5 class="card-title">Secretarios</h5>
                    <p class="card-text">Agrega y edita secretarios vinculados.</p>
                    <a href="/Secretarios" class="btn btn-outline-success btn-sm">Administrar</a>
                </div>
            </div>
        </div> *@

        <!-- Card 3 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-university fa-2x text-warning"></i>
                    </div>
                    <h5 class="card-title">Cuentas Bancarias</h5>
                    <p class="card-text">Gestiona cuentas para transferencias.</p>
                    <a href="/CuentasBancarias/Index" class="btn btn-outline-warning btn-sm">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Card 4 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-clock fa-2x text-danger"></i>
                    </div>
                    <h5 class="card-title">Devoluciones Pendientes</h5>
                    <p class="card-text">Aprobar devoluciones.</p>
                    <a href="/Devoluciones" class="btn btn-outline-danger btn-sm">Ver detalles</a>
                </div>
            </div>
        </div>

        <!-- Segunda fila -->
        <!-- Card 5 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-times-circle fa-2x text-info"></i>
                    </div>
                    <h5 class="card-title">Devoluciones rechazadas</h5>
                    <p class="card-text">Cambio de estatus</p>
                    <a href="/Facturas" class="btn btn-outline-info btn-sm">Administrar</a>
                </div>
            </div>
        </div>

        <!-- Card 6 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-file-export fa-2x text-secondary"></i>
                    </div>
                    <h5 class="card-title">Métricas</h5>
                    <p class="card-text">Consulta y descarga de métricas.</p>
                    <a href="/Reportes" class="btn btn-outline-secondary btn-sm">Ver reportes</a>
                </div>
            </div>
        </div>

        <!-- Card 7 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-cogs fa-2x text-dark"></i>
                    </div>
                    <h5 class="card-title">Configuración</h5>
                    <p class="card-text">Actualizar ruta en el Sharepoint.</p>
                    <a href="/Configuracion" class="btn btn-outline-dark btn-sm">Configurar</a>
                </div>
            </div>
        </div>

        <!-- Card 8 -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-clipboard-list fa-2x text-muted"></i>
                    </div>
                    <h5 class="card-title">Embargos x Emitir</h5>
                    <p class="card-text">Cambio de estatus para realizar otro proceso.</p>
                    <a href="/Emitir" class="btn btn-outline-info btn-sm">Configurar</a>
                </div>
            </div>
        </div>
    </div>
</div>

